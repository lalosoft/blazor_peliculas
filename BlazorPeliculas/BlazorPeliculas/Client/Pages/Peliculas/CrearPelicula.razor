    private Pelicula Pelicula = new Pelicula();
    private List<Genero> GenerosNoSeleccionados = new();

    protected override void OnInitialized()
    {
        GenerosNoSeleccionados = new List<Genero>()
        {
            new Genero(){Id = 1, Nombre="Accion"},
            new Genero(){Id = 2, Nombre="Terror"},
            new Genero(){Id = 3, Nombre="Comedia"},
            new Genero(){Id = 4, Nombre="Drama"},
        };
    }

    void Crear()
    {
        Console.WriteLine(navigationManager.Uri);
        navigationManager.NavigateTo("pelicula");
    }
}
