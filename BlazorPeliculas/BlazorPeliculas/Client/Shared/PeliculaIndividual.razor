<div style="margin-right:2%; margin-bottom:10px; text-align:center">
    <a href="@urlPelicula/@Pelicula.Id">
        <img src="@Pelicula.Poster" alt="Poster" style="width: 225px; height: 300px"/>
    </a>
    <p style="max-width: 225px; height: 44px; font-size: 15px; font-weight: bold"><a href="@urlPelicula/@Pelicula.Id">@Pelicula.TituloCortado</a></p>
    <div>
        <AuthorizeView Roles="Admin">
            <Authorized>
                <a href="peliculas/editar/@Pelicula.Id" class="btn btn-info">Editar</a>
                <button type="button" class="btn btn-danger" @onclick="@(() => EliminarPeliculaEvent.InvokeAsync(Pelicula))">Borrar</button>
            </Authorized>
        </AuthorizeView>
        
    </div>
</div>

@code {
    [Parameter]
    public Pelicula Pelicula { get; set; }

    [Parameter]
    public bool MostrarBotones { get; set; } = false;

    [Parameter]
    public EventCallback<Pelicula> EliminarPeliculaEvent { get; set; }

    private string urlPelicula = string.Empty;

    protected override void OnInitialized()
    {
        urlPelicula = $"pelicula/";
    }

}
