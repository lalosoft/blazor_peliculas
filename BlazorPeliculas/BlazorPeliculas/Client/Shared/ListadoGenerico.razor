@typeparam Titem

@if (Listado == null)
{
    @*<text>Cargando....</text>*@
    @if (Cargando == null)
    {
        <text>Cargando....</text>
    }
    else
    {
        @Cargando
    }
}
else if (Listado.Count() == 0)
{
    @if (NoRegistros == null)
    {
        <text>No hay registros</text>
    }
    else
    {
        @NoRegistros
    }
}
else
{
    if(HayRegistros != null)
    {
        @foreach (var elemento in Listado)
        {
            @HayRegistros(elemento);
        }
    }
    else
    {
        @HayRegistrosCompleto
    }

}

@code {

    [Parameter]
    public RenderFragment Cargando { get; set; }

    [Parameter]
    public RenderFragment NoRegistros { get; set; }

    [Parameter]
    public RenderFragment<Titem> HayRegistros { get; set; }

    [Parameter]
    public RenderFragment HayRegistrosCompleto { get; set; }

    [Parameter]
    public List<Titem> Listado { get; set; }

}
